{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "umd",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "node_modules",
    "dist"
  ]
}
